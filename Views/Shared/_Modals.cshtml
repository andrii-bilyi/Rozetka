<!-- Modal -->
<div class="modal" id="userDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Видалення аккаунту</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="userDeleteCheckDefault">
                    <label class="form-check-label" for="userDeleteCheckDefault">
                        Я усвідомлено видаляю свій обліковий запис, списки бажань та історію замовлень.
                        Відмовляюся від можливості отримувати листи про знижки та відповіді на мої коментарі.
                    </label>                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger disabled" id="profile-delete-button">Видалити аккаунт</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Відміна</button> 
            </div>
            </div>
        </div>
    </div>
</div>



    <script>
        // Получаем ссылки на чекбокс и кнопку
        const deleteCheckbox = document.getElementById('userDeleteCheckDefault');
        const deleteButton = document.getElementById('profile-delete-button');

        // Слушаем изменения состояния чекбокса
        deleteCheckbox.addEventListener('change', function () {
            // Если чекбокс выбран, делаем кнопку активной, иначе - неактивной
            if (deleteCheckbox.checked) {
                deleteButton.classList.remove('disabled');
            } else {
                deleteButton.classList.add('disabled');
            }
        });
    </script>




