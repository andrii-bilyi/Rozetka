<!-- Modal -->
<form id="feedbackForm" asp-controller="Home" asp-action="NewFeedback" method="post">
    <div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="feedbackModalLabel">Написати відгук</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="feedback-advantages" class="form-label">Переваги</label>
                        <input type="text" class="form-control" id="feedback-advantages" name="feedback-advantages" required>
                    </div>
                    <div class="mb-3">
                        <label for="feedback-disadvantages" class="form-label">Недоліки</label>
                        <input type="text" class="form-control" id="feedback-disadvantages" name="feedback-disadvantages" required>
                    </div>
                    <div class="mb-3">
                        <label for="feedback-text" class="form-label">Коментарі</label>
                        <textarea class="form-control" id="feedback-text" rows="3" name="feedback-text"></textarea>
                    </div>
                    <div class="row border-top">
                        <div class="col-md-6">
                            <label for="feedback-user" class="form-label">Ваше ім'я та прізвище</label>
                            <input type="text" class="form-control" id="feedback-user" name="feedback-user" 
                                   value="@((Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value) ?? "") @((Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.GivenName)?.Value) ?? "")" required>
                        </div>
                        <div class="col-md-6">
                            <label for="feedback-contact" class="form-label">Електронна пошта</label>
                            <input type="text" class="form-control" id="feedback-contact" name="feedback-contact"
                                   value="@((Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value) ?? "")" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Відміна</button>
                    <button type="submit" class="btn btn-primary" id="feedback-button">Залишити відгук</button>
                </div>
            </div>
        </div>
    </div>
</form>

