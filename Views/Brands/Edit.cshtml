@model Rozetka.Data.Entity.Brand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Brand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageData" class="control-label">Image</label>
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            @if (Model.ImageData != null)
            {
                <div>
                    <img src="data:image;base64,@Convert.ToBase64String(Model.ImageData)" alt="Brand Image" style="max-width: 200px;" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
